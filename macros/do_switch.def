subcode:: define_ops
    $map define_op, IF, ELIF, ELSE

#-- if/elsif/else ---------------------------- 
subcode:: parse_keyword_other
    $elif tn_word == WORD_if
        $call new_op, op, OP_IF, 0
        $call set_cur, T_BOS, op

# -- block ----
subcode:: reduce_statement_cv2
    $case $(T)==OP_IF || $(T)==OP_ELIF
        $if $(T)==OP_IF
            $print "reduce cv2 OP_IF: %p - %p, %p", $(op), $(op1), $(op_cv)
            op = $(op)
            op->left.op = $(op1)
            op->right.op = $(op_cv)
        $else
            $print "reduce cv2 OP_ELIF: %p - %p, %p", $(op), $(op1), $(op_cv)
            $(T)=OP_IF
            $call op_list, op_tmp, OP_IF, $(op), $(op1)
            $call op_list, op, OP_IF, op_tmp, $(op_cv)
            $(op) = op
        i_top-=1
        cur.type = 0
        # $(type:1)=T_BOS
        # ------------------------------
        $if s $eq "else" && !isword(s[4])
            s+=4
            op->type = OP_ELSE
        $elif s $eq "elsif" && !isword(s[5])
            s+=5
            op->type = OP_ELIF
        $else
            $(type:1)=T_ATOM
            f_flatten_op_list(op, OP_IF)
            $call set_cur, T_Semi, 0
            continue
        break

subcode:: reduce_statement_cv1
    $case $(T) == OP_ELSE
        $(T) = OP_IF
        $call op_list, op, OP_IF, $(op), $(op_cv)
        $print "reduce cv1 OP_ELSE: %p - %p, %p", op, $(op), $(op_cv)
        $(op) = op
        $(type:1)=T_ATOM
        f_flatten_op_list(op, OP_IF)
        $call set_cur, T_Semi, 0
        continue

