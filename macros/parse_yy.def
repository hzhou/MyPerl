subcode: _autoload
    $register_name(yylval) YYSTYPE

#----------------------------------------------- 
subcode: yy_getchar
    $global int yychar
    yychar = yylex()
    $if yychar<0
        yychar = 0

subcode: yy_expect(T)
    yychar=yylex()
    $call yy_assert, $(T)

subcode: yy_assert(T)
    $if yychar!=$(T)
        yyerror("Missing $(T)!")

