macros:
    debug: 1

page: myperl, basic_frame
    $(set:f=tests/t.pl)
    file_in = fopen("$(f)", "r")
    $if !file_in
        croak("Failed to open $(f)")

    cv_main = perl_parse(NULL, file_in)

    $call run_init
    run_cv(cv_main)

fncode: croak(s_msg)
    fprintf(stderr, "%s\n", s_msg)
    exit(-1)
